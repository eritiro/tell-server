<h1>Metrics</h1>

<table class="table">
  <thead>
    <tr>
      <th>Action</th>
      <% @versions.each do |version| %>
        <th class="col-sm-2">
          <%= version.name %>
          <br/>
          <small><%= version.created_at.to_date %></small><br/>
          <small>
            impresions: <%= version.number_of_users %>
            days online: <%= version.days_online %>
          </small>
        </th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event_type| %>
      <tr>
        <td><%= event_type[:key] %></td>
        <% event_type[:values].each do |value| %>
          <td><%= value.present? ? "#{value}%" : "-" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<h1>Listing comments</h1>

<table>
  <thead>
    <tr>
      <th>Text</th>
      <th>Score</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.text %></td>
        <td><%= comment.score %></td>
        <td><%= comment.user %></td>
        <td><%= link_to 'Show', [@location, comment] %></td>
        <td><%= link_to 'Edit', edit_location_comment_path(@location, comment) %></td>
        <td><%= link_to 'Destroy', [@location, comment], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_location_comment_path(@location) %> |
<%= link_to 'Back to location', @location %>
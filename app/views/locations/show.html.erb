<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @location.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @location.address %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @location.phone %>
</p>

<p>
  <strong>Score:</strong>
  <%= @location.score %>
</p>

<% if @location.afip_req.present? %>
  <p>
    <strong>Afip req:</strong>
    <%= link_to @location.afip_req, "https://servicios1.afip.gov.ar/clavefiscal/qr/mobilePublicInfo.aspx?req=#{@location.afip_req}", target: "_blank" %>
  </p>
<% end %>


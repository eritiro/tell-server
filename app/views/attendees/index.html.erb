<h1>Listing attendees</h1>

<table class="table">
  <thead>
    <tr>
      <th>Username</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= link_to "Show", user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Attend', location_attendees_path(@location), method: :put %> |
<%= link_to 'Leave', location_attendees_path(@location), method: :delete %>

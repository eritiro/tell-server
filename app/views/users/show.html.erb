<p id="notice"><%= notice %></p>

<p>
  <%= image_tag(@user.picture.url(:medium)) %>
</p>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Gender:</strong>
  <%= @user.gender %>
</p>

<p>
  <strong>Birthday:</strong>
  <%= @user.birthday %>
</p>

<p>
  <strong>Admin:</strong>
  <%= @user.admin %>
</p>

<p>
  <strong>Fake:</strong>
  <%= @user.fake %>
</p>

<% if @user.identities.any? %>
  <p>
    <strong>Profile:</strong>
    <%= link_to 'link', 'http://facebook.com/' + @user.identities.first.uid, target: '_blank' %>
  </p>
<% end %>

<p>
  <strong>Events:</strong>
  <ul>
    <% @user.events.each do |event| %>
      <li><%= event.event_type %></li>
    <% end%>
  </ul>

</p>

<p>
  <strong>Completed tutorial:</strong>
  <%= @user.completed_tutorial %>
</p>

<p>
  <strong>Attending to:</strong>
  <%= @user.location %>
</p>


<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Messages', user_messages_path(@user) %> |
<%= link_to 'Back', users_path %>

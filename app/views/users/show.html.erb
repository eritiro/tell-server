<p id="notice"><%= notice %></p>

<p>
  <%= image_tag(@user.picture.url(:original)) %>
</p>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Gender:</strong>
  <%= @user.gender %>
</p>

<p>
  <strong>Birthday:</strong>
  <%= @user.birthday %>
</p>

<p>
  <strong>Admin:</strong>
  <%= @user.admin %>
</p>

